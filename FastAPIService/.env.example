# Environment configuration for FastAPIService
# Copy to .env and update values securely.

# Runtime
ENV=development
DEBUG=true
SERVICE_NAME=fastapi-service

# CORS - comma-separated list of allowed origins
CORS_ALLOW_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# JWT
FASTAPI_JWT_SECRET=please_set_a_secure_random_secret
FASTAPI_JWT_ALG=HS256

# External services (placeholders)
DJANGO_SERVICE_URL=http://django-service:8000

# Database (placeholder for future direct reads)
DATABASE_URL=postgresql://user:password@postgres:5432/products_db
